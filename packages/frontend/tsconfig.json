{
    "include": [
        "src",
        "*.ts"
    ],
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "outDir": "dist",
        "noEmit": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "moduleResolution": "Bundler",
        "strict": true,
        "noUnusedLocals": false,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": ".",
        "skipLibCheck": true,
        "paths": {
            "@/*": ["./src/*"]
        }
    }
}
